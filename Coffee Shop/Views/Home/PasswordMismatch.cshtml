<h2 id="Error">@ViewBag.message</h2>

<div id="Box2">
    <form action="Summary" method="post">

        <p>First Name: <input type="text" name="Firstname" required /></p> <br>
        <br />
        <p>Last Name: <input type="text" name="Lastname" required /></p> <br />
        <br />
        <p>Email: <input type="email" name="Email" required /></p><br />
        <br />
        <p>Password: <input type="password" name="Password" required /> </p> <br />
        <br />
        <p>Confirm Password: <input type="password" name="ConfirmPassword" required /></p> <br />
        <br />
        <p>Phone Number: <input type="tel" name="Phone" /></p><br />

        <p>
            Gender:
            <select required>
                <option value="Gender">Male</option>
                <option value="Gender">Female</option>
                <option value="Gender">Other</option>
            </select>
        </p>
        <br />
        <input type="submit" value="Register" />
    </form>
</div>

